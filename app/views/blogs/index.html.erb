welcome <%= current_user.name %><br>
<%= link_to 'compose message', new_message_path %><br><br>

<%= link_to 'logout', logout_path  , method: :delete %>
<hr>
Sent Messages
<table>
  <tr>
    <th>Name</th>
    <th>Message</th>
  </tr>
  <% if @sent_messages.present? %>
      <% @sent_messages.each do |message| %>
          <tr>
            <td><%= message.user.name %></td>
            <td><%= message.message.body %></td>
          </tr>
      <% end %>
  <% end %>
</table>
<br>
<hr>

Received Messages

<table>
  <tr>
    <th>Name</th>
    <th>Message</th>
  </tr>
  <% if @recieved_message.present? %>
      <% @recieved_message.each do |message| %>
          <tr>
            <td><%= message.message.sender.name %></td>
            <td><%= message.message.body %></td>
          </tr>
      <% end %>
  <% end %>
</table>
<br>


